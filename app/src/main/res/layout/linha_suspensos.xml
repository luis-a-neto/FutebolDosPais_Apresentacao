<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/escudo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/div_jogador"
        android:layout_toEndOf="@id/escudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/jogador"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="7.5dp"
            android:gravity="center|start"
            android:textStyle="bold"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/categoria"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:gravity="center|start"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/numero"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginBottom="12.5dp"
            android:gravity="center|start"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/criterio"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_toStartOf="@id/jogos"
        android:layout_marginEnd="50dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/jogos"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_toStartOf="@id/motivo"
        android:layout_marginEnd="30dp"
        android:gravity="center" />

    <ImageView
        android:id="@+id/motivo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="12.5dp"
        android:layout_marginBottom="12.5dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentEnd="true"
        android:gravity="center" />
</RelativeLayout>
