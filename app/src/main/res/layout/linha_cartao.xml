<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:textSize="14sp" />

    <!--<ImageButton
        android:id="@+id/btn_visualizar"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="12.5dp"
        android:src="@drawable/ic_visualizar" />-->

    <TextView
        android:id="@+id/tempo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="12.5dp" />

    <LinearLayout
        android:id="@+id/div_jogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@id/tempo"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/equipe"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="x"
            />

        <ImageView
            android:id="@+id/adversario"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/div_jogador"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@id/div_jogo"
        android:gravity="center|end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/jogador"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center|end"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/numero"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center|start"
            android:textSize="12sp" />

    </LinearLayout>

    <!--<View
        android:id="@+id/divisor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/data"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="#A8A8A8"
        android:layout_marginEnd="90dp"/>

    <TextView
        android:id="@+id/arbitro"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center|start"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/data"
        android:text="ARBITRO: Jose Vassalo Santos"/>-->

</RelativeLayout>
